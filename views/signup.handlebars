<div class="container h-75">
  <div class="row h-100 justify-content-center align-items-center px-0">
    <div class="col-10 col-md-8 col-lg-6 px-0">
      <form class="bg-light p-5 rounded shadow" id="signup-form">
        <div class="form-group">
          <label for="username-signup">Username</label>
          <input type="text" class="form-control" id="username-signup" placeholder="Enter Username">
        </div>
        <div class="form-group">
          <label for="email-signup">Email address</label>
          <input type="email" class="form-control" id="email-signup" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input type="password" class="form-control" id="password-signup" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/signup.js"></script>