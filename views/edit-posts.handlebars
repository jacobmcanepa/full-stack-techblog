<div class="container mt-3">
  <a href="/dashboard">&larr; Back to dashboard</a>
  <h2 class="mt-2">Edit Post</h2>
  <form id="edit-form">
    <div class="form-group">
      <input type="text" class="form-control" value="{{post.title}}" id="post-title">
    </div>
    <div class="form-group">
      <textarea class="form-control" rows="8" id="post-content">{{post.post_body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Post</button>
    <button type="button" class="btn btn-danger" id="delete-post">Delete</button>
  </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>